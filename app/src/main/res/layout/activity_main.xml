<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="net.theev.smsscheduler.MainActivity">

    <LinearLayout
        android:id="@+id/defaultsButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:onClick="addNewNumber"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addNumberImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_contact_phone_white_24dp" />

        <TextView
            android:id="@+id/totalMessagesSentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/add_new_number"
            android:textAllCaps="true"
            android:textColor="#ffffff" />

    </LinearLayout>

    <ListView
        android:id="@+id/numbersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/defaultsButtonLayout"
        android:divider="#E6E6E6"
        android:dividerHeight="1dp"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@drawable/rounded_rectangle" />

</RelativeLayout>
